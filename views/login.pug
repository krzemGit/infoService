extends layout

block content
  h1(class="title-login section-title")= title
  div(class="form-wrapper")
    form(method="POST" class="form-login")
      div(class="login-message")
        if error
          p(class="error-screen") #{error}
      p(class="login-input")
        label(for="login") Login
        input(type="text" name="login" class="text-input" autocomplete="off")
      p(class="login-input")
        label(for="password") Password
        input(type="password" name="password" class="text-input")
      p(class="login-btn")
        input(type="submit" value="login")
